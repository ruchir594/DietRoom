extends layout

block content
    title Your Profile
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand.page-scroll(itemprop='name', href='/') Networking + Food
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a.page-scroll(href='/home') Home
                    li
                        a.page-scroll(href='#') My Profile
                    li
                        a.page-scroll(href='/tech') Tech
                    li
                        a.page-scroll(href='/logout') Logout



    #baseframe(style="float:left, width: 100%; background-color:#dedede; color:#232323")
        #page(style="background-color: #dedede;")
            .container
                .title
                    br
                    br
                    br
                    br
            .update-notification
                h5=message
            .container
                .row
                    form.pure-form(name="updateForm", method="post", action="/me/pro")
                        fieldset.pure-group
                            legend Personal Details
                            input.pure-input-1-4(type="text", name="username", placeholder="#{user.name}", readonly="readonly")
                            input.pure-input-1-4(type="text", name="gender", placeholder="#{user.gender}", readonly="readonly")
                            input.pure-input-1-4(type="text", name="screen_name", placeholder="#{user.screen_name}", readonly="readonly")
                            input.pure-input-1-4(type="text", name="description", placeholder="#{user.description}", readonly="readonly")
                            input.pure-input-1-4(type="text", name="favourites_count", placeholder="#{user.favourites_count}", readonly="readonly")
                            input.pure-input-1-4(type="text", name="statuses_count", placeholder="#{user.statuses_count}", readonly="readonly")
                        fieldset
                            input.pure-input-1-3(type="text", name="education", placeholder="#{user.education}", readonly="readonly")
                            .pure-u-1.pure-u-md-1-3
                              label(for='time')  Monitor Level
                              br
                              select#state.pure-input-1-3(name="hedu")
                                option
                                option High
                                option Medium
                                option Low
                                option Meh
                        fieldset
                            input.pure-input-1-3(type="text", name="major", placeholder="#{user.major}", readonly="readonly")
                        //-
                            fieldset
                            //legend Professional Details
                            legend Highest Education
                            label.pure-radio(for="highest-education")
                                input#highest-education(type="radio", name="hedu", value="highschool")
                                |   High School
                                br
                                input#highest-education(type="radio", name="hedu", value="bachelor")
                                |   Bachelor's Degree
                                br
                                input#highest-education(type="radio", name="hedu", value="Masters")
                                |   Master's Degree
                                br
                                input#highest-education(type="radio", name="hedu", value="Doctorate")
                                |   PhD
                        fieldset
                            //legend Field of Study and Occupation
                            label.pure-checkbox(for="field-of-study")
                                input#field-of-study(type="checkbox", name="fostudy", value="Business & Trade")
                                | Business & Trade
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Computer Science")
                                | Computer Science
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Fitness & Health")
                                | Fitness & Health
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Food & Drinks")
                                | Food & Drinks
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Engineering")
                                | Engineering
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Law")
                                | Law
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Life Advice")
                                | Life Advice
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Mental Wellness")
                                | Mental Wellness
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="News (International)")
                                | News (International)
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Public Services")
                                | Public Services (Police, Postal, Military, Wellness)
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Sciences")
                                | Sciences
                                br
                                input#field-of-study(type="checkbox", name="fostudy", value="Wellness")
                                | Wellness
                                br
                        fieldset
                            legend What is going on in your head? Don't worry, We will never, ever share it with anyone! Pinky promise :)
                            input.pure-input-1-2(type="text", name="waytrn1", placeholder="What is going on in your head?")
                        button.pure-button.pure-button-primary(type="submit") Update

    script(src='http://code.jquery.com/jquery.js')
    script.
        $(function () {
            $("#centerframe").on("click", function () {
                $("#baseframe").load("/network");
            });
            $("#leftframe").on("click", function () {
                $("#baseframe").load("/food");
            });
            $("#rightframe").on("click", function () {
                $("#baseframe").load("/me");
            });
        });
